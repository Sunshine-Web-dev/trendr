**********************************
http://man7.org/linux/man-pages/man7/lvmcache.7.html
https://utcc.utoronto.ca/~cks/space/blog/linux/DmCacheChangeWriteMode

pvremove -ff /dev/sdd
pvremove -ff /dev/sdc
umount /dev/md2 /home

pvremove -ff /dev/md2
pvremove -ff /dev/md0

vgremove extend /dev/md2 /dev/sdc
lvremove /dev/extend/data  
vgremove extend /dev/md2 /dev/md0

/sbin/mkfs.ext4  /dev/sdc
/sbin/mkfs.ext4  /dev/sdd
/sbin/mkfs.ext4  /dev/md2

nano /etc/fstab

umount /dev/md2 /home
umount /dev/extend/data  /home

vgcreate  extend /dev/md2 /dev/sdc
lvcreate -L425G -n cache extend /dev/md2
lvcreate  -L2G -n meta extend /dev/md2
lvcreate   -L1.81T -n data extend /dev/sdc
lvconvert  --type cache-pool --cachemode writeback  --cachepolicy mq --chunksize 5M --poolmetadata  extend/meta extend/cache
lvconvert   -vv --type cache   --cachepool extend/cache extend/data


lvconvert  --type cache-pool --cachemode writeback   --chunksize 5.5M --poolmetadata extend/meta extend/data 
lvconvert  --type cache-pool --cachemode writeback  --cachepolicy mq --chunksize 4.5M --poolmetadata extend/meta extend/data


vgcreate  extend /dev/md0 /dev/md2 
lvcreate -L425G -n cache extend /dev/md2 
lvcreate  -L2G -n meta extend /dev/md2
lvcreate   -L1.81T -n data extend /dev/md0
lvconvert  --type cache-pool --cachemode writeback --cachepolicy mq --chunksize 5.5M --poolmetadata  extend/meta extend/cache
lvconvert    --type cache  --cachepool extend/cache extend/data

lvcreate  -L1.55G -n meta extend /dev/md2
lvcreate   -L1.71T -n data extend /dev/md0

vgcreate  extend /dev/md2 /dev/sdc 
lvcreate -L422G -n cache extend /dev/md2 
lvcreate  -L5G -n meta extend /dev/md2
lvcreate   -L1.81T -n data extend /dev/sdc
lvconvert  --type cache-pool --cachemode writeback --cachepolicy mq --chunksize 5M --poolmetadata  extend/meta extend/cache
lvconvert    --type cache  --cachepool extend/cache extend/data

mkfs.ext4  /dev/extend/data

mount /dev/extend/data  /home

lvconvert  --type cache-pool --cachemode writeback --cachepolicy smq --cachesettings \ 'migration_threshold=4 random_threshold=4' --chunksize 4.5M extend/data

lvconvert  -vv  --type cache  --cachepool extend/cache extend/data

vgcreate  extend  /dev/sdc /dev/loop0 
lvcreate -L4.6G -n cache extend  /dev/loop0 
lvcreate  -L.4G -n meta extend /dev/loop0 
lvcreate   -L1.81T -n data extend /dev/sdc
lvconvert  --type cache-pool --cachemode writeback  --chunksize 5M --poolmetadata extend/meta extend/cache
lvconvert  -vv  --type cache  --cachepool extend/cache extend/data
#####################################

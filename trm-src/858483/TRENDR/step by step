1.
vgcreate  extend /dev/md2 /dev/sdd
lvcreate -L420G -n cache extend /dev/md2 
lvcreate  -L5G -n meta extend /dev/md2 
lvcreate   -L1.81T -n data extend /dev/sdd
lvconvert  --type cache-pool --cachemode writeback --cachepolicy mq --chunksize 4.5M --poolmetadata  extend/meta extend/cache
lvconvert    --type cache  --cachepool extend/cache extend/data

1.1
mkfs.ext4  /dev/extend/data
mount /dev/extend/data  /home
nano /etc/fstab
/dev/extend/data /home     ext4 defaults,nobarrier,rw  0 0
tune2fs -O has_journal -o journal_data_writeback /dev/extend/data
tune2fs -O dir_index /dev/extend/data

 dmsetup reload extend-data

 dmsetup suspend extend-data
 dmsetup resume extend-data
 dmsetup status extend-data


lvchange --cachepolicy smq extend/data
lvchange --cachesettings 'migration_threshold=3048' \   extend/data

writeback 2 migration_threshold 2048 mq 10 random_threshold 4 sequential_threshold 512 discard_promote_adjustment 1 read_promote_adjustment 4 write_promote_adjustment 8


lvconvert --cachemode writeback extend/data

lvconvert  --cachemode writeback --cachepolicy smq --cachesettings \ 'migration_threshold=2048 random_threshold=4 write_promote_adjustment 2' --chunksize 4.5M extend/data

 dmsetup ls --tree
 dmsetup status extend-data
 dmsetup table extend-data
 dmsetup reload --table '0 3886948352 cache 251:1 251:0 251:3 9216 1 writeback smq 0' extend-data   

 dmsetup suspend extend-data
 dmsetup resume extend-data



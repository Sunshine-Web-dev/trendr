#######################################
Cron to delte a folder 

find /hdd/www/storage/media/tmp -type f -cmin -1 -print0|xargs -r0 rm 
find /hdd/www/storage/media/tmp -ctime 48 -exec rm -f {} \;
find /hdd/www/storage/media/tmp -type f -empty -delete

rm -rf /hdd/www/storage/media/tmp/*
Delete folder older than 7 days

0 0 * * * find /hdd/www/storage/media/tmp -mtime +7 -exec rm {} \;

Delete folder older than 1 hour

find /path/to/file/* -ctime +1 -exec rm {} \; 

Delete folder older than 1 minute
find /hdd/www/storage/media/tmp -mtime -1m -exec rm -i '{}' \;

 https://www.kernel.org/doc/Documentation/bcache.txt
  bcache-super-show /dev/sdc
  cat /sys/block/bcache0/bcache/cache_mode 
  sudo wipefs -a /dev/sdc
  sudo lsblk
echo 0 > /sys/block/bcache0/bcache/sequential_cutoff
echo writeback > /sys/block/bcache0/bcache/cache_mode
echo 0 > /sys/block/bcache0/bcache/congested_write_threshold_us

echo 1 > /sys/block/bcache0/bcache/stop
 echo 1 > /sys/block/bcache0/bcache/detach

 echo 0 > /sys/fs/bcache/907b1cdb-d475-4136-a1d5-23ee5b0f77ce/congested_read_threshold_us
 echo 0 > /sys/fs/bcache/e39859d1-be5e-4203-aab1-d33884b0a5e7/congested_write_threshold_us

mkdir /data

  mkfs.ext4 /dev/bcache0
  mount /dev/bcache0 /data

  sudo wipefs -a /dev/sdc
  sudo wipefs -a /dev/md2


  make-bcache -B /dev/sdc
  make-bcache -C /dev/md2
  make-bcache -B /dev/sdc -C /dev/md2

echo /dev/sdc > /sys/fs/bcache/register
make-bcache -B /dev/sdc -C /dev/md2

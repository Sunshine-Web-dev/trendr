        # Setup var defaults
        set $no_cache "";
        # If non GET/HEAD, don't cache & mark user as uncacheable for 1 second via cookie
        if ($request_method !~ ^(GET|HEAD)$) {
            set $no_cache "1";
        }
        # Drop no cache cookie if need be
        # (for some reason, add_header fails if included in prior if-block)
        if ($no_cache = "1") {
            add_header Set-Cookie "_mcnc=1; Max-Age=2; Path=/";
            add_header X-Microcachable "0";
        }
        # Bypass cache if no-cache cookie is set
        if ($http_cookie ~* "_mcnc") {
                    set $no_cache "1";
        }
        set $trnder_logged_in "";


        if ($http_cookie ~* "trnder_logged_in_[^=]*=([^%]+)%7C") {
             set $trnder_logged_in trnder_logged_in_$1;
        }
set $mobile not_mobile;

if ($http_user_agent ~* "mobile.+firefox|mobile.+Safari|mobile.+Chrome|mobile.+Opera|mobile.skyfire|mobile.Bolt|mobile.Teashark|mobile.Blazer|iemobile|avantgo|bada\/|blackberry|blazer|compal|elaine|fennec|hiptop|iris|kindle|lge|maemo|midp|mmp|(android|bb\d+|meego).+mobile|plucker|pocket|psp|series(4|6)0|symbian|treo|up\.(browser|link)|vodafone|wap|windows ce|xda|xiino") {  
  set $mobile "";
}
set $app not_app;

if ($http_user_agent ~* "Crosswalk|mobile") {  
  set $app "";
}


        #set $my_cache_key "$scheme://$host$uri$is_args$args$trnder_logged_in$mobile not_mobile";


        set $my_cache_key "$scheme://$host$uri$is_args$args$trnder_logged_in$mobile$app";


        # Bypass cache if flag is set
        fastcgi_cache cache;
        fastcgi_cache_key $my_cache_key|$server_name|$request_uri;
        #fastcgi_cache_valid 404 301 403 400 401 304 30d;
        fastcgi_cache_valid 200 9s;
        #fastcgi_cache_valid  any 30d;
        fastcgi_max_temp_file_size 1M;
        fastcgi_cache_use_stale updating;
        #fastcgi_pass localhost:9000;
        fastcgi_pass unix:/var/www/fpm.sock;
        fastcgi_pass_header Set-Cookie;
        fastcgi_pass_header Cookie;
        fastcgi_ignore_headers Cache-Control Expires Set-Cookie;
        fastcgi_cache_use_stale error  timeout invalid_header http_500;
        fastcgi_buffers 256 16k;
        fastcgi_index index.php;
        fastcgi_param  SCRIPT_FILENAME  /var/www$fastcgi_script_name;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_param  PATH_INFO          $fastcgi_path_info;
        fastcgi_param  PATH_TRANSLATED    $document_root$fastcgi_path_info;
        #fastcgi_intercept_errors on;
        include fastcgi_params;

    }
# Deny access to any files with a .php extension in the uploads directory
location ~* ^/tr-src/uploads/.*.php$ {
        deny all;
        access_log off;
        log_not_found off;
}

}

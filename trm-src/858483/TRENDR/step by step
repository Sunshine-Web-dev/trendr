lvcreate  -L1.44G -n meta extend /dev/md2

mkdir /data
mkfs.ext4  /dev/extend/data
mkfs.xfs  /dev/extend/data

mount /dev/extend/data  /home

tune2fs -O has_journal -o journal_data_writeback /dev/extend/data
mount -o remount,defaults,nobarrier,rw /dev/extend/data

nano /etc/fstab

/dev/extend/data /data ext4 defaults,nobarrier,rw  0 0

lvconvert --type cache --cachepool extend/data \ --cachemode writeback extend/cache
lvconvert --splitcache extend/data

dmsetup ls --tree
 dmsetup table extend-data

 dmsetup reload --table '0 3886948352 cache 251:1 251:0 251:3 9216 1 writeback smq 0' extend-data
 dmsetup reload --table '0 3886948352 cache 251:1 251:0 251:3 9216 1 writeback default 0' extend-data

 dmsetup status
 lvchange -vv --cachepolicy mq  extend/data
 lvchange --cachepolicy smq  extend/cache 
  lvchange -vv --cachepolicy smq  extend/data 

lvchange --cachepolicy smq --cachesettings \ 'migration_threshold=2048 random_threshold=4' extend/data

lvchange --cachepolicy smq --cachesettings \ 'migration_threshold=2048 random_threshold=4' extend/cache

systemctl enable lvm2-lvmetad.service
systemctl enable lvm2-lvmetad.socket
systemctl start lvm2-lvmetad.service
systemctl start lvm2-lvmetad.socket
lvremove extend/cache


LVM CACHE
https://www.varnish-software.com/blog/accelerating-your-hdd-dm-cache-or-bcache
https://bbs.archlinux.org/viewtopic.php?id=124615
pvremove -ff /dev/sdd
pvremove -ff /dev/sdc
/sbin/mkfs.ext4 /dev/sdc
/sbin/mkfs.ext4 /dev/sdd

umount /dev/md2 /home
umount /dev/md5 /meta

vgcreate  extend /dev/md2 /dev/sdc
lvcreate -L546G -n cache extend /dev/md2
lvcreate  -L2.14G -n meta extend /dev/md2
lvcreate   -L1.81T -n data extend /dev/sdc
lvconvert  --type cache-pool --cachemode writeback --chunksize 4.5M --poolmetadata extend/meta extend/cache
lvconvert    --type cache  --cachepool extend/cache extend/data

mkfs.ext4  /dev/extend/data 
mkdir /mysql
mount /dev/extend/data /mysql

mdadm -Cv /dev/md2 -l0 -n2   /dev/sdd1 /dev/sdc1

yum -y install nano
nano /etc/fstab
Important remove mount /dev/md2
/dev/extend/data  /mysql  ext4 rw,defaults 0 0

service mysql stop
umount /dev/extend/data /data
vgremove extend /dev/md2 /dev/sdc
